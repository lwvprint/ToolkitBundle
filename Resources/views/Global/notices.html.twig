<!-- Flash messages -->
{% block flashmessages %}

<section id="notices">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="well notices">
					{% for type, flashMessage in app.session.flashbag.all() %}
					<div class="alert fade in">
						<a class="close" data-dismiss="alert">&times;</a>
						<i class="notice-{{ type }}"></i>  {{ flashMessage }}
					</div>
					{% endfor %}
                        
                    {% if app.session.hasFlash('notice') %}
                        {{ app.session.flash('notice') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
<!-- Flash messages end -->