{% extends 'LWVToolkitBundle:Frontend:frontend.html.twig' %}

{% block title %}
    {{ parent() }} :: Stonegate
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                <h2>{{ category.name }}</h2>
                
                {% for sub_category in sub_categories %}
                    {% if loop.first%}
                    <div class="row">
                    {% endif %}
                        <div class="span4">
                            <div class="category-item">
                                <div class="category-image">
                                    <a href="{{ path('category', { 'slug': sub_category.slug }) }}">
                                        <img alt="" src="http://placehold.it/100x150&amp;text=Icon" />
                                    </a>
                                </div>
                                <div class="category-details">
                                    <h3>{{ sub_category.name }}</h3>
                                    <p>{{ sub_category.description }}</p>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    {% if loop.index % 3 == 0 %}
                    </div>
                    <div class="row">
                    {% endif %}

                    {% if loop.last %}
                    </div>
                    {% endif %}
                    <hr/>
                {% endfor %}
            
                {% for product in products %}
                    {% if loop.first%}
                    <div class="row">
                    {% endif %}

                        <div class="span4">
                            <div class="category-item">
                                <div class="category-image">
                                    <a href="{{ path('product', { 'slug': product.slug }) }}">
                                        <img alt="" src="http://placehold.it/100x150&amp;text=Icon" />
                                    </a>
                                </div>
                                <div class="category-details">
                                    <h3>{{ product.name }}</h3>
                                    <p>{{ product.reference }}</p>
                                    <p>{{ product.description }}</p>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>

                    {% if loop.index % 3 == 0 %}
                    </div>
                    <div class="row">
                    {% endif %}

                    {% if loop.last %}
                    </div>
                    {% endif %}
                {% endfor %}
                {% if products|length == 0 %}
                <p>No Products Found.</p>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}