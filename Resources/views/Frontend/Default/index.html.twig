{% extends 'LWVToolkitBundle:Frontend:frontend.html.twig' %}

{% block title %}
    {{ parent() }} :: Stonegate
{% endblock %}

{% block mini_cart %}
    <div id="mini-cart">
        <a href="#link-to-actual-cart">
            <i class="icon-shopping-cart icon-white"></i>
            <span class="my-bag-image">My Cart</span> |
            <span class="my-cart-items">0 item(s)</span> |
            <span class="basket-value">£0.00</span>
        </a>
        <div class="cart-under"><!-- jquery pop cart will trigger on this div -->
            <a href="#">View Cart</a>
        </div>
    </div>
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
            {% for category in categories %}
                {% if loop.first%}
                <div class="row">
                {% endif %}

                    <div class="span4">
                        <div class="category-item">
                            <div class="category-image">
                                <img alt="" src="http://placehold.it/100x150&amp;text=Icon" />
                            </div>
                            <div class="category-details">
                                <h3>{{ category.name }}</h3>
                                <p>{{ category.description }}</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>

                {% if loop.index % 3 == 0 %}
                </div>
                <div class="row">
                {% endif %}

                {% if loop.last %}
                </div>
                {% endif %}
            {% endfor %}
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="span10 offset1">
                <div class="shop-help">
                    <p>Can’t find what you’re looking for? Try our search bar at the top of this page.</p>
                    <p>If you still cannot find anything suitable, use our Special Request service by clicking here!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="popular-items">
        <div class="container">
            <div class="row">
                <div class="span9">
                    <h2>Popular</h2>
                    <div class="row">
                        <div class="span3">
                            <div class="popular-image">
                                <img src="http://placehold.it/200x200&amp;text=Icon" />
                            </div>
                        </div>
                        <div class="span3">
                            <div class="popular-image">
                                <img src="http://placehold.it/200x200&amp;text=Icon" />
                            </div>
                        </div>
                        <div class="span3">
                            <div class="popular-image">
                                <img src="http://placehold.it/200x200&amp;text=Icon" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <h2>Calendar</h2>
                    <div id="datepicker"></div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}