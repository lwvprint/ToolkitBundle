<!DOCTYPE HTML>
<html lang="en-GB">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="robots" content="noindex,nofollow" />
        <title>{% block title %}LWV Toolkit{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block styelsheets %}
            {% stylesheets
            	'bundles/lwvtoolkit/css/bootstrap-2.0.1.css' filter='cssrewrite'
                'bundles/lwvtoolkit/css/*' filter='cssrewrite'
                'bundles/lwvtoolkit/Frontend/css/*' filter='cssrewrite'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" media="screen" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <!-- header -->
        <header>
            <!-- link bar -->
            <div id="link-bar">
                <div class="container">
                    <div class="row">
                        <div class="span6">
                            <ul id="site-links"><!-- to be floated left -->
                                <li><a href="{{ path('shop') }}">Home</a></li>
                                <li><a href="">Terms and Conditions</a></li>
                                <li><a href="">FAQ</a></li>
                                <li><a href="">Support</a></li>
                            </ul>
                        </div>
                        <div class="span5 offset1">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <ul id="user-links"><!-- to be floated right -->
                                <li>Logged in as: <strong>{{ app.user.username }}</strong></li>
                                <li><a href="{{ path('tk_profile') }}">My Account</a></li>
                                <li><a href="{{ path('logout') }}">Logout</a></li>
                            </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- link bar end -->
            <!-- brand bar -->
            <div id="brand-bar">
                <div class="container">
                    <div class="row">
                        <div class="span2">
                            <div class="logo"><!-- floated left -->
                                <h1>LWV Toolkit</h1>
                            </div>
                        </div>
                        <div class="span5 offset5">
                            {% block mini_cart %}
								<div id="mini-cart">
										<a href="#link-to-actual-cart">
											<i class="icon-shopping-cart icon-white"></i>
											<span class="my-bag-image">My Cart</span> |
											<span class="my-cart-items">0 item(s)</span> |
											<span class="basket-value">Â£0.00</span>
										</a>
									<div class="cart-under"><!-- jquery pop cart will trigger on this div -->
										<a href="#">View Cart</a>
									</div>
								</div>
							{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- brand bar end -->
        </header>
        <!-- header end -->

        <section>
            <div class="container">
                <div class="row">
                    <!-- breadcrumb -->
                    <div class="span8">
                        {{ wo_render_breadcrumbs() }}
                    </div>
                    <!-- breadcrumb end -->
                    <!-- search -->
                    <div class="span4">
                        <form action="#" method="post">
                            <fieldset>
                                <div class="control-group">
                                    <div class="controls">
                                        <div class="input-append">
                                            <input placeholder="Search..." type="text" />
                                            <span class="add-on">
                                                <i class="icon-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <!-- search end -->
                </div>
            </div>
        </section>
        {% block notices %}
        	     {% include 'LWVToolkitBundle:Global:notices.html.twig' %}
        {% endblock %}

        <!-- Content -->
        {% block content %}
        This is the default content...
        {% endblock %}
        <!-- Content end -->

        <footer>
            {% block footer %}
            {% endblock %}
        </footer>

        <!-- container ends -->
        {% block javascripts %}
            {% javascripts
                '@LWVToolkitBundle/Resources/public/js/jquery-1.7.1.min.js'
                '@LWVToolkitBundle/Resources/public/js/*'
                '@LWVToolkitBundle/Resources/public/Frontend/js/*'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script type="text/javascript">
            $(document).ready(function() {
                $('.alert').bind('closed', function () {
                    var count = $(".well").children().length;
                    if(count <= 1) {
                        // $('.well').fadeOut('slow');
                        $('.notices').animate({
                            opacity: 0,
                            height: 'toggle',
                            padding: 0,
                            margin: 0
                        }, 200);
                    }
                });
            });
            </script>
        {% endblock %}
    </body>
</html>