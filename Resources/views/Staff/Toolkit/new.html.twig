{% extends 'LWVToolkitBundle:Staff:staff.html.twig' %}

{% block title %}
Create New Toolkit :: {{ parent() }}
{% endblock %}

{% block h1 %}
Create New Toolkit
{% endblock %}
{% block toolbar_options %}
    <li>
        <a class="toolbar_btn" href="{{ path('staff_toolkit') }}" title="Back to List" >
            <span class="process-icon-back" ></span>
            <div>Back to List</div>
        </a>
    </li>

{% endblock %}
{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                <form action="{{ path('staff_toolkit_create') }}" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <p>
                        <button type="submit">Create</button>
                    </p>
                </form>

                <ul class="record_actions">
                    <li>
                        <a href="{{ path('staff_toolkit') }}">
                            Back to the list
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}