{% extends 'LWVToolkitBundle:Staff:staff.html.twig' %}

{% block title %}
Toolkit Creation :: {{ parent() }}
{% endblock %}

{% block h1 %}
Toolkit Creation
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                <form action="{{ path('staff_toolkit_create') }}" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <p>
                        <button type="submit">Create</button>
                    </p>
                </form>

                <ul class="record_actions">
                    <li>
                        <a href="{{ path('staff_toolkit') }}">
                            Back to the list
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}