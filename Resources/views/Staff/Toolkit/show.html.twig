{% extends 'LWVToolkitBundle:Staff:staff.html.twig' %}

{% block title %}
View Toolkit :: {{ parent() }}
{% endblock %}

{% block h1 %}
{{ entity.name }}
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Url</th>
                            <td>{{ entity.url }}</td>
                        </tr>
                        <tr>
                            <th>Is_active</th>
                            <td>{{ entity.isactive }}</td>
                        </tr>
                        <tr>
                            <th>Is_demo</th>
                            <td>{{ entity.isdemo }}</td>
                        </tr>
                        <tr>
                            <th>Is_secure</th>
                            <td>{{ entity.issecure }}</td>
                        </tr>
                        <tr>
                            <th>Is_payment</th>
                            <td>{{ entity.ispayment }}</td>
                        </tr>
                        <tr>
                            <th>Maintenance_mode</th>
                            <td>{{ entity.maintenancemode }}</td>
                        </tr>
                        <tr>
                            <th>Maintenance_message</th>
                            <td>{{ entity.maintenancemessage }}</td>
                        </tr>
                        <tr>
                            <th>Can_edit_profile</th>
                            <td>{{ entity.caneditprofile }}</td>
                        </tr>
                        <tr>
                            <th>Can_edit_password</th>
                            <td>{{ entity.caneditpassword }}</td>
                        </tr>
                        <tr>
                            <th>Enable_budget</th>
                            <td>{{ entity.enablebudget }}</td>
                        </tr>
                        <tr>
                            <th>Budget_amount</th>
                            <td>{{ entity.budgetamount }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Companies</th>
                            <td>
                                <ul>
                                {% for company in entity.companies %}
                                    <li>{{ company.name }}</li>
                                {% endfor %}
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <th>Theme</th>
                            <td>{{ entity.theme.name }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul class="record_actions">
                    <li>
                        <a href="{{ path('staff_toolkit') }}">
                            Back to the list
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('staff_toolkit_edit', { 'id': entity.id }) }}">
                            Edit
                        </a>
                    </li>
                    <li>
                        <form action="{{ path('staff_toolkit_delete', { 'id': entity.id }) }}" method="post">
                            {{ form_widget(delete_form) }}
                            <input type="submit" value="Delete"/>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}