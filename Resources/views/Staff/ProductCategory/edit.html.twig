{% extends 'LWVToolkitBundle:Staff:staff.html.twig' %}

{% block title %}
Category Edit :: {{ parent() }}
{% endblock %}

{% block h1 %}
{{ entity.name }}
{% endblock %}

{% block toolbar_options %}
    <li>
        <a class="toolbar_btn" href="{{ path('staff_product_category_show', { 'id': entity.id }) }}" title="Back to List" >
            <span class="process-icon-back" ></span>
            <div>Back to {{ entity.name }}</div>
        </a>
        <a class="toolbar_btn" href="{{ path('staff_product_category') }}" title="Back to List" >
            <span class="process-icon-back" ></span>
            <div>Back to List</div>
        </a>
    </li>
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                {% form_theme edit_form 'LWVToolkitBundle:Global:fields.html.twig' %}

                {{ form_errors(edit_form) }}
                    
                <form action="{{ path('staff_product_category_update', { 'id': entity.id }) }}" class="form-horizontal" method="post" {{ form_enctype(edit_form) }}>
                    <fieldset>
                        <legend>Category Details</legend>
                        {{ form_row(edit_form.name) }}
                        {{ form_row(edit_form.slug) }}
                        {{ form_row(edit_form.description) }}
                        {{ form_row(edit_form.image) }}
                        {{ form_row(edit_form.parent) }}
                        {{ form_row(edit_form.toolkit) }}
                    </fieldset>
                    <fieldset>
                        <div class="form-actions">
                            {{ form_rest(edit_form) }}
                            <input class="btn-primary" type="submit" value="Edit" />
                            <input class="btn-warning" type="reset" value="Reset" />
                        </div>
                    </fieldset>
                </form>
                <div class="row">
                    <div class="span11">
                        <a class="btn" href="{{ path('staff_product_category') }}">
                            Back to the list
                        </a>
                    </div>
                    <div class="span1">
                        <form action="{{ path('staff_product_category_delete', { 'id': entity.id }) }}" method="post">
                            {{ form_widget(delete_form) }}
                            <input class="btn-danger" type="submit" value="Delete" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}