{% extends 'LWVToolkitBundle:Staff:staff.html.twig' %}

{% block title %}
Company List :: {{ parent() }}
{% endblock %}

{% block h1 %}
{{ entity.name }}
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                <table class="record_properties table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Lft</th>
                            <td>{{ entity.lft }}</td>
                        </tr>
                        <tr>
                            <th>Rgt</th>
                            <td>{{ entity.rgt }}</td>
                        </tr>
                        <tr>
                            <th>Root</th>
                            <td>{{ entity.root }}</td>
                        </tr>
                        <tr>
                            <th>Lvl</th>
                            <td>{{ entity.lvl }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ entity.slug }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ entity.description }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ entity.image }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>
                </table>


                <a class="btn" href="{{ path('staff_product_category') }}">
                    Back to the list
                </a>

                <a class="btn" href="{{ path('staff_product_category_edit', { 'id': entity.id }) }}">
                    Edit
                </a>

                <form action="{{ path('staff_product_category_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button type="submit">Delete</button>
                </form>

            </div>
        </div>
    </div>
</section>
{% endblock %}