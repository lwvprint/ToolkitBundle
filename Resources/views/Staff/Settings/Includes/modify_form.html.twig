{% form_theme form 'LWVToolkitBundle:Staff\\Settings:form.html.twig' %}

<form method="post" class="lwv_config_settings_modify form-inline" {{ form_enctype(form) }}>
	{{ form_errors(form) }}

	{% for section in sections | lwv_sortSections %}
		{% if section is not empty %}
			<fieldset>
				<legend>{{ section | trans({}, 'LWVToolkitBundle') }}</legend>
		{% endif %}

		{% for setting in form.settings if setting.section.get('value') == section %}
			{{ form_row(setting.name) }}
			{{ form_row(setting.section) }}
			{{ form_row(setting.nice_name) }}
			{{ form_row(setting.description) }}
			{{ form_row(setting.value, {'label': setting.nice_name.get('value')}) }}
			<p class="help-block">{{ setting.description.get('value') }}</p>
		{% endfor %}

		{% if section is not empty %}
			</fieldset>
		{% endif %}
	{% endfor %}

	{{ form_rest(form) }}

	<button type="submit">{{ 'modify_settings' | trans({}, 'LWVToolkitBundle') }}</button>
</form>