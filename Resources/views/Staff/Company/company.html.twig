{% extends 'LWVToolkitBundle:Staff:staff.html.twig' %}

{% block title %}
Company List :: {{ parent() }}
{% endblock %}

{% block h1 %}
Company List
{% endblock %}

{% block content %}
{{ vars }}
<section>
    <div class="container">
        <div class="row">
            <div class="span12">
                <table class="records_list">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Parent</th>
                            <th>Name</th>
                            <th>Account #</th>
                            <th>Address 1</th>
                            <th>Address 2</th>
                            <th>Town</th>
                            <th>City</th>
                            <th>Postcode</th>
                            <th>Email</th>
                            <th>Website</th>
                            <th>Active?</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('staff_company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td></td>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.accountno }}</td>
                            <td>{{ entity.address1 }}</td>
                            <td>{{ entity.address2 }}</td>
                            <td>{{ entity.town }}</td>
                            <td>{{ entity.city }}</td>
                            <td>{{ entity.postcode }}</td>
                            <td>{{ entity.email }}</td>
                            <td>{{ entity.website }}</td>
                            <td>{% if entity.isactive == 1 %}<i class="icon-ok"></i>{% else %}<i class="icon-remove"></i>{% endif %}</td>
                            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
                            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif%}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('staff_company_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('staff_company_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('staff_company_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}