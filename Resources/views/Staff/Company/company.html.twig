<h1>User\Company list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Lft</th>
            <th>Rgt</th>
            <th>Root</th>
            <th>Lvl</th>
            <th>Name</th>
            <th>Account_no</th>
            <th>Address1</th>
            <th>Address2</th>
            <th>Town</th>
            <th>City</th>
            <th>Post_code</th>
            <th>Email</th>
            <th>Website</th>
            <th>Is_active</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('staff_company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.lft }}</td>
            <td>{{ entity.rgt }}</td>
            <td>{{ entity.root }}</td>
            <td>{{ entity.lvl }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.accountno }}</td>
            <td>{{ entity.address1 }}</td>
            <td>{{ entity.address2 }}</td>
            <td>{{ entity.town }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.postcode }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.website }}</td>
            <td>{{ entity.isactive }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('staff_company_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('staff_company_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('staff_company_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
